{
  "name": "@notas-voz/backend",
  "version": "0.1.0",
  "description": "Backend API para notas de voz con IA",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:workers": "tsx watch src/workers/index.ts",
    "build": "tsc && prisma generate",
    "start": "node dist/index.js",
    "start:workers": "node dist/workers/index.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write . --ignore-path ../../.prettierignore",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:contract": "dredd ../../contracts/openapi.yaml http://127.0.0.1:5000 --hookfiles=__tests__/contract/dredd.hooks.js",
    "test:contract:backend": "dredd ../../contracts/openapi.yaml http://127.0.0.1:4000 --hookfiles=__tests__/contract/dredd.hooks.js",
    "clean": "rm -rf dist",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.9.1",
    "@aws-sdk/client-s3": "^3.478.0",
    "@aws-sdk/s3-request-presigner": "^3.478.0",
    "@fastify/cookie": "^9.4.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.0.1",
    "@notas-voz/schemas": "workspace:*",
    "@prisma/client": "^5.7.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.1",
    "assemblyai": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^4.15.2",
    "crypto": "^1.0.1",
    "crypto-js": "^4.2.0",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.4",
    "nodemailer": "^7.0.6",
    "openai": "^4.20.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/mime-types": "^2.1.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.8",
    "@faker-js/faker": "^8.3.1",
    "dredd": "^14.1.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}